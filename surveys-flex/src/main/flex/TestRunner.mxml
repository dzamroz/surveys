<?xml version="1.0" encoding="utf-8"?>
<mx:Application xmlns:mx="http://www.adobe.com/2006/mxml" xmlns:adobe="http://www.adobe.com/2009/flexUnitUIRunner"

                creationComplete="runTests()">

    <mx:Script>
        <![CDATA[
        import org.adaptiveplatform.surveys.application.RemoteBusinessExceptionParametersUnmarshallerTest;
        import org.adaptiveplatform.surveys.application.StringUtilTest;
        import org.flexunit.listeners.UIListener;
        import org.flexunit.runner.FlexUnitCore;

        public function runTests():void {
            var core:FlexUnitCore = new FlexUnitCore();
            core.addListener(new UIListener(uiListener));
            core.run(RemoteBusinessExceptionParametersUnmarshallerTest, StringUtilTest);
        }
        ]]>
    </mx:Script>

    <!-- FlexUnit GUI Component -->
    <adobe:TestRunnerBase id="uiListener"
                          width="100%"
                          height="100%"/>
</mx:Application>
